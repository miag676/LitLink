<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="litlink-jpa" transaction-type="JTA">
        <jta-data-source>jdbc/LitLinkDS</jta-data-source>

        <class>si.fri.prpo.litlink.ratings.entities.Rating</class>
        <class>si.fri.prpo.litlink.ratings.entities.Review</class>

        <properties>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>

    </persistence-unit>
</persistence>
